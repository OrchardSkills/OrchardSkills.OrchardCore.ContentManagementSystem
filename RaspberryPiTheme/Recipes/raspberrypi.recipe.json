{
  "name": "RaspberryPi",
  "displayName": "Raspberry Pi Theme",
  "description": "A theme designed for the Raspberry Pi.",
  "author": "Orchard Skills",
  "website": "https://orchardskills.com",
  "version": "1.0.0-rc2",
  "issetuprecipe": true,
  "categories": [ "default" ],
  "tags": [ "Raspberry Pi", "IoT", "CMS" ],
  "steps": [
    {
      "name": "feature",
      "enable": [
        // SaaS
        "OrchardCore.Admin",
        "OrchardCore.Diagnostics",
        "OrchardCore.DynamicCache",
        "OrchardCore.HomeRoute",
        "OrchardCore.Localization",
        "OrchardCore.Features",
        "OrchardCore.Navigation",
        "OrchardCore.Recipes",
        "OrchardCore.Resources",
        "OrchardCore.Roles",
        "OrchardCore.Settings",
        "OrchardCore.Themes",
        "OrchardCore.Users",
        "OrchardCore.Users.ChangeEmail",
        "OrchardCore.Users.Registration",
        "OrchardCore.Users.ResetPassword",

        // Content Management
        "OrchardCore.Alias",
        "OrchardCore.AdminMenu",
        "OrchardCore.Autoroute",
        "OrchardCore.Html",
        "OrchardCore.ContentFields",
        "OrchardCore.ContentPreview",
        "OrchardCore.Contents",
        "OrchardCore.Contents.FileContentDefinition",
        "OrchardCore.ContentTypes",
        "OrchardCore.CustomSettings",
        "OrchardCore.Deployment",
        "OrchardCore.Deployment.Remote",
        "OrchardCore.Feeds",
        "OrchardCore.Flows",
        "OrchardCore.Indexing",
        "OrchardCore.Layers",
        "OrchardCore.Lucene",
        "OrchardCore.Lists",
        "OrchardCore.Markdown",
        "OrchardCore.Media",
        "OrchardCore.Menu",
        "OrchardCore.Placements",
        "OrchardCore.Queries",
        "OrchardCore.Shortcodes.Templates",
        "OrchardCore.Taxonomies",
        "OrchardCore.Title",
        "OrchardCore.Templates",
        "OrchardCore.Widgets",

        // Orchard Skills
        "OrchardSkills.OrchardCore.RaspberryPi",

        // Themes
        "RaspberryPiTheme",
        "TheAdmin",
        "SafeMode"
      ]
    },
    {
      "name": "themes",
      "admin": "TheAdmin",
      "site": "RaspberryPiTheme"
    },
    {
      "name": "settings",
      "HomeRoute": {
        "Action": "Index",
        "Controller": "Home",
        "Area": "RaspberryPiTheme"
      },
      "ChangeEmailSettings": {
        "AllowChangeEmail": true
      },
      "LoginSettings": {
        "UseSiteTheme": true,
        "UseExternalProviderIfOnlyOneDefined": false,
        "DisableLocalLogin": false,
        "UseScriptToSyncRoles": false,
        "SyncRolesScript": null
      },
      "RegistrationSettings": {
        "UsersCanRegister": 1,
        "UsersMustValidateEmail": true,
        "UseSiteTheme": true,
        "NoPasswordForExternalUsers": false,
        "NoUsernameForExternalUsers": false,
        "NoEmailForExternalUsers": false,
        "UseScriptToGenerateUsername": false,
        "GenerateUsernameScript": null
      },
      "ResetPasswordSettings": {
        "AllowResetPassword": true,
        "UseSiteTheme": true
      }
    },
    {
      "name": "content",
      "data": [
        {
          "ContentItemId": "[js: uuid()]",
          "=": null,
          "ContentType": "Menu",
          "DisplayText": "Main Menu",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUserId')]",
          "Author": "[js: parameters('AdminUsername')]",
          "TitlePart": {
            "Title": "Main Menu"
          },
          "AliasPart": {
            "Alias": "main-menu"
          },
          "MenuPart": {},
          "MenuItemsListPart": {
            "MenuItems": [
              {
                "ContentItemId": "[js: uuid()]",
                "ContentItemVersionId": null,
                "ContentType": "LinkMenuItem",
                "DisplayText": null,
                "Latest": false,
                "Published": false,
                "PublishedUtc": null,
                "CreatedUtc": null,
                "Owner": null,
                "Author": "[js: parameters('AdminUsername')]",
                "LinkMenuItemPart": {
                  "Name": "Home",
                  "Url": null
                },
                "LinkMenuItem": {}
              },
              {
                "ContentItemId": "[js: uuid()]",
                "ContentItemVersionId": null,
                "ContentType": "LinkMenuItem",
                "DisplayText": null,
                "Latest": false,
                "Published": false,
                "PublishedUtc": null,
                "CreatedUtc": null,
                "Owner": null,
                "Author": "[js: parameters('AdminUsername')]",
                "LinkMenuItemPart": {
                  "Name": "Devices",
                  "Url": null
                },
                "LinkMenuItem": {},
                "MenuItemsListPart": {
                  "MenuItems": [
                    {
                      "ContentItemId": "[js: uuid()]",
                      "ContentItemVersionId": null,
                      "ContentType": "LinkMenuItem",
                      "DisplayText": null,
                      "Latest": false,
                      "Published": false,
                      "PublishedUtc": null,
                      "CreatedUtc": null,
                      "Owner": null,
                      "Author": "[js: parameters('AdminUsername')]",
                      "LinkMenuItemPart": {
                        "Name": "Relay",
                        "Url": "relay"
                      },
                      "LinkMenuItem": {}
                    }
                  ]
                }
              }
            ]
          },
          "@WeldedPartSettings": {
            "MenuPart": {
              "Position": "3"
            },
            "MenuItemsListPart": {
              "Position": "4"
            }
          }
        }
      ]
    }
  ]
}
